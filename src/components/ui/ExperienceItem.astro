---
import { Icon } from "astro-icon/components";

interface Props {
    icon?: string;
    title: string;
    description?: string;
    footer?: string;
    bgOpacity?: number;
    href?: string;
    className?: string;
    imagePath?: string;
}

const { icon, title, description, footer, className, imagePath, href, bgOpacity = 5 } = Astro.props;

const opacity = `opacity-${bgOpacity}`


---

<article class={`${className ? className : ''} w-full group overflow-hidden relative`}>
   <a href={href} class="w-full h-full flex flex-col" title={title} target="_blank">
    {icon && <Icon name={icon} class="icon z-10 relative" />}
    {imagePath && <img class={`absolute top-0 w-full h-full left-0 transition-transform duration-300 ease-in-out object-cover object-top group-hover:scale-110 ${opacity}`} src={`/images/projects/${imagePath}`}  />}
    <div class="z-10 relative flex-1 flex flex-col justify-between">
        <h1 class="title">{title}</h1>
        <p>{description}</p>
        <footer>{footer}</footer>
    </div>
   </a>
</article>


<style>
    .icon {
        @apply size-8;
    }
    .title {
        @apply text-4xl text-center font-bold text-slate-100 p-5;
    }
    p{
       @apply p-5 
    }
    article {
        @apply p-4  rounded-lg text-2xl shadow-md text-slate-200;
        background: radial-gradient(circle at 50% 50%, rgb(44, 43, 18), rgb(22, 22, 22))
    }
    footer {
        @apply text-xl p-5 text-slate-300;
    }

    article {
        @apply relative transition-all duration-300 ease-in-out;
    }
    


</style>