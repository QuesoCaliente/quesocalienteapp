---
interface Props {
    image?: string;
    src: string;
}
const { image, src } = Astro.props;
---


<div class="player w-full lg:max-w-[350px]">
    {image && (
        <div class="imgbx">
            <img src={image}>
        </div>
    )}
    <audio controls>
        <source src={src}>
    </audio>
</div>











<style>
    .player {
    position: relative;
    background: #f1f3f4;
}

.player .imgbx {
    position: relative;
    width: 100%;
    height: 350px;
}

.player .imgbx img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin-top: 0;
    margin-bottom: 0;
    object-fit: cover;
}

.player audio {
    width: 100%;
    outline: none;
}
</style>