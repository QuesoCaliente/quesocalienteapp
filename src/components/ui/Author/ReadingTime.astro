---
interface Props {
  text: string;
}
import { getReadingTime } from '@/utils/functions'

const { text } = Astro.props;

const readingTime = getReadingTime(text);

---

<div class="flex items-center gap-1 text-paragraph">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M10 2a8 8 0 0 0-8 8c0 4.418 3.582 8 8 8s8-3.582 8-8a8 8 0 0 0-8-8zm0 14a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-10a1 1 0 0 0-1 1v5a1 1 0 0 0 2 0V7a1 1 0 0 0-1-1z"/>
  </svg>
  <span>{readingTime}</span>
</div>


