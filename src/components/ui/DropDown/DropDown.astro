---
interface Props {
  minWidth?: string;
}
const { minWidth = "min-w-64" } = Astro.props;
---

<nav class={`dropdown min-w-${minWidth}`} id="more">
  <slot />
</nav>

<style>
  @reference "@/styles/global.css";
  nav {
    border: 0.2px solid #50536d;
    @apply shadow-elevation top-full left-auto z-50 right-4 p-6 bg-[#0a0a0a] origin-top-right absolute rounded-lg transition-all ease-drop-out duration-500;
  }
  .dropdown:not(.is-active) {
    pointer-events: none;
    opacity: 0;
    transform: translate3d(0, -1rem, 0) scale(0.9);
  }
</style>
