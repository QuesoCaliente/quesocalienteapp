---
import { Icon } from "astro-icon/components";
import Badge from "./Badge.astro";

interface Props {
  title: string;
  description: string;
  image: string;
  link?: string;
  github?: string;
  reverse?: boolean;
}

const { title, link, image, description, github, reverse } = Astro.props;
---

<article class={"card"}>
  <a
    href={link}
    target="_blank"
    class="flex flex-1 flex-col group"
    rel="noopener noreferrer"
  >
    <div class="relative p-6">
      <img
        src={image}
        alt={title}
        class="w-full rounded-t-lg aspect-square object-cover grayscale group-hover:grayscale-0 transition-all duration-300 ease-in-out"
      />
      <Badge
        title="Github"
        icon="mdi:github"
        styles="bg-black text-white absolute top-8 right-8"
      />
    </div>

    <div class="flex flex-1 flex-col justify-between p-12 gap-3">
      <h2 class="text-2xl font-bold group-hover:text-primary">{title}</h2>
      <p class="text-gray-500 dark:text-gray-400 text-xl">{description}</p>
      <span class="text-primary font-semibold text-xl flex items-center gap-2"
        >Ir al proyecto <Icon
          class="group-hover:-rotate-45 transition-transform duration-300 ease-in-out"
          name="mdi:arrow-right-circle-outline"
        /></span
      >
    </div>
  </a>
</article>

<style>
  .card {
    @apply bg-white dark:bg-[#0c0c0d] rounded-3xl dark:text-white shadow-md flex flex-col items-center justify-between;
    border: 1px solid #292929;
  }
</style>
