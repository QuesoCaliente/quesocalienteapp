---
interface Props {
    title: string;
}
const { title } = Astro.props;
---


<div class="widget">
    <div class="widget-title">
        <span>{title}</span>
    </div>
    <div class="widget-content">
        <slot/>
        </div>
</div>


<style>
    .widget {
        
    }

    .widget-title {
        @apply mb-5
    }
    .widget-title span {
        @apply text-gray-700 font-semibold text-base inline-block;
    }
</style>