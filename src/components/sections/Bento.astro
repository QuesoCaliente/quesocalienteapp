---
import { getLastBlogPost } from "@/core/blog/functions";
import { Icon } from "astro-icon/components";
import MiniHeader from "../ui/MiniHeader.astro";

const lastPost = await getLastBlogPost();

const image = lastPost.data.image;
---

<section>
  <article class="linkedin-container">
    <div class="p-16 flex flex-col gap-6">
      <div class="flex flex-col gap-2 title">
        <h1 class="">Desarrollador <span>de Software</span></h1>
        <span class="dark:text-paragraph"
          >Capitan QuesoCaliente en servicio</span
        >
      </div>
      <a
        class="bg-primary hover:bg-primary/80 cursor-pointer ease-linear transition-colors px-8 py-4 rounded-lg flex w-fit font-semibold text-xl"
        >Conectemos en Linkedin</a
      >
    </div>
    <img
      class="relative self-end w-[750px] right-0"
      src="/images/home/tablet-linkedin.svg"
      alt="linkedin"
    />
  </article>
  <article class="my-repository-container">
    <h1 class="text-4xl font-normal px-9 py-8 text-center text-white">
      Visita mis <span class="text-[#B58D03] font-semibold">repositorios</span>
    </h1>
    <img src="/images/home/phone-github.svg" alt="github" />
  </article>
  <article class="my-library-container">
    <h1 class="text-4xl font-normal px-14 py-14 text-center text-white">
      Libreria de <span class="text-[#B58D03] font-semibold">recursos</span>
    </h1>
  </article>
</section>

<style>
  section {
    @apply grid grid-cols-12 gap-4 p-4 max-w-screen-xl mx-auto;
  }
  .linkedin-container {
    @apply col-span-8 row-span-2 dark:bg-[#0c0c0d] flex flex-col relative overflow-hidden rounded-lg;
    border: 1px solid #292929;
  }
  .my-repository-container {
    @apply col-span-4 row-span-1 dark:bg-[#0c0c0d] rounded-lg;
    border: 1px solid #292929;
  }
  .my-library-container {
    @apply col-span-4 row-span-1 dark:bg-[#0c0c0d] rounded-lg;
    border: 1px solid #292929;
  }
  .title > h1 {
    @apply text-5xl font-semibold text-white;
  }
  .title > span {
    @apply text-2xl font-normal;
  }
</style>
