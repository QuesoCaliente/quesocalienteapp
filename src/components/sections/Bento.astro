---
import { getLastBlogPost } from '@/core/blog/functions';
import {Icon} from 'astro-icon/components';

const lastPost  = await getLastBlogPost();

const image = lastPost.data.image;
---


<section>
    <article class="col-span-12 group sm:col-span-6 md:col-span-3 lg:col-span-2 row-span-1 bg-brand-bg relative">
        <a target="_blank" class="flex justify-center items-center w-full h-full relative" href="https://github.com/QuesoCaliente" title="Github QuesoCaliente">
            <Icon class='hidden md:block absolute top-3 left-3 text-3xl' name='feather:github' />
            <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
        <h1>Visita mis repositorios</h1>
        </a>
    </article>
    <article class="col-span-12 group sm:col-span-6 md:col-span-9 lg:col-span-7 row-span-1 bg-red-700 relative patternsquare">
        <a target="_blank" class="flex justify-center items-center w-full h-full relative z-[3]" href="https://asset-box-nine.vercel.app/" title="AssetBox">
        <Icon class='hidden md:block absolute top-3 left-3 text-3xl' name='mdi:code-braces-box' />
        <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
        <h1>AssetBox Recursos</h1>
    </a>
    </article>
    <article class="col-span-12 group sm:col-span-6 md:col-span-4 lg:col-span-3 lg:row-span-2 row-span-3 bg-brand-linkedin relative">
        <a target="_blank" class="flex justify-center items-center w-full h-full relative" href="https://www.linkedin.com/in/briancifuentes/" title="Linkedin QuesoCaliente">
            <Icon class='hidden md:block absolute top-3 left-3 text-3xl' name='feather:linkedin' />
            <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
            <h1>Conectemos en Linkedin</h1>
        </a>
    </article>
    <article class={`blogpost flex flex-col justify-center items-center text-gray-100 rounded-lg overflow-hidden col-span-12 sm:col-span-6 md:col-span-8 lg:col-span-3 sm:row-span-3 lg:row-span-1 row-span-3 bg-red-500`}>
        <a href={`/blog/${lastPost.slug}`} title={lastPost.data.title}  class="relative h-full flex flex-col justify-end items-center">
            <div 
            transition:name={lastPost.data.title}
            style={
                {
                    backgroundImage: `url(${image})`,
                    backgroundSize: 'cover',
                    backgroundPosition: 'center',
                    transform: 'scale(1.1)',
                }
            }
            class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 z-[1]"></div>
            <h1 class="z-[2] m-4 featured line-clamp-2">{lastPost.data.title}</h1> 
        </a>
    </article>
    <article class="col-span-12 lg:col-span-6 row-span-1 bg-yellow-200 relative overflow-hidden patternfood p-4">
        <img src="https://cdn.quesocaliente.dev/home%2Fvtuber.png" alt="queso" class="absolute z-[2] -right-56 md:block md:-top-[90%] lg:-top-20  pointer-events-none" />
        <div class="relative z-[3] flex flex-col justify-start items-center gap-2">
            <span class="text-gray-950 text-6xl md:8xl lg:text-8xl bg-yellow-200 p-2 rounded-lg">Hey!</span>
        <h1 class="text-gray-950 bg-yellow-200 p-2 rounded-lg">Soy QuesoCaliente</h1>
        <p class="text-gray-950 text-xl font-medium bg-yellow-200 p-2 rounded-lg">Desarrollador de Software</p>
        </div>
    </article>
    <article class="col-span-12 group sm:col-span-6 md:col-span-12 lg:col-span-4 row-span-1 bg-brand-discord relative patternx">
        <Icon class='hidden md:block absolute top-3 left-3 text-3xl' name='ic:baseline-discord' />
        <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
        <a target="_blank" class="flex justify-center items-center w-full h-full relative" href="https://discord.gg/whjkMeTKRN" title="Laboratorio de Artefactos Futuristas">
            <h1>Laboratorio de Artefactos Futuristas</h1>
        </a>
    </article>
    <article class="col-span-12 group sm:col-span-6  md:col-span-6 lg:col-span-4 row-span-1 bg-brand-twitch relative patternRain">
        <Icon class='hidden md:block absolute top-3 left-3 text-3xl' name='mdi:twitch' />
        <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
        <a target="_blank" class="flex justify-center items-center w-full h-full relative" href="https://twitch.tv/quesocaliente0" title="Twitch QuesoCaliente">
            <h1>QuesoCaliente0</h1>
        </a>
    </article>
    <article class="col-span-12 group md:col-span-6 lg:col-span-4 row-span-1 bg-brand-twitter relative patternTwitter">
        <a target="_blank" class="flex justify-center items-center w-full h-full relative" href="https://twitter.com/quesocaliente0" title="Twitter QuesoCaliente">
            <Icon class='hidden md:block absolute top-3 left-3 text-xl' name='feather:twitter' />
            <Icon class='opacity-0 group-hover:opacity-100 duration-300 ease-drop-out absolute top-3 right-3 text-3xl transition-all' name='mdi:external-link' />
            </h1>@QuesoCaliente0</h1>
        </a>
    </article>
</section>



