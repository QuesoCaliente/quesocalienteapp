---
import SectionTitle from "../SectionTitle.astro";
import Button from "../ui/Buttons/Button.astro";
import ProjectCard from "../ui/ProjectCard.astro";
import { PROJECTS } from "@/config";
---

<section class="section">
  <SectionTitle> Proyectos </SectionTitle>
  <div class="projects">
    {
      PROJECTS.map((project) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          link={project.link}
          image={project.image}
          github={project.github}
          reverse={project.reverse}
        />
      ))
    }
  </div>
  <Button size="lg" iconPosition="right" icon="mdi:chevron-right" radius="lg"
    >Mostrar Todos</Button
  >
</section>

<style>
  @reference "@/styles/global.css";
  .section {
    @apply max-w-screen-xl lg:mx-auto mx-4 px-4 md:px-0 flex flex-col gap-6 items-start;
  }
  .projects {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5;
  }
</style>
