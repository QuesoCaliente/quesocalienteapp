<style>
  @reference "@/styles/global.css";
  section {
    @apply flex flex-col items-center justify-center text-center bg-[#0c0c0d] h-[550px] max-w-screen-xl mx-4 lg:mx-auto lg:w-full gap-10 relative overflow-hidden mb-[60px];
    border: 1px solid #292929;
  }
  section::before {
