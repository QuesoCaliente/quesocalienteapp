---

import {Icon} from 'astro-icon/components'
---


<header>
    <div class="navbar">
        <div class="navbar-item">
            <Icon class="text-white size-6" name="feather:menu"/>
        </div>
    </div>
    <div class="hero">
        <a class="logo" href="/">
            <Icon class="text-white size-12 md:size-16" name="logo"/>
            <h1 class="text-white text-md md:text-xl font-bold">quesocaliente.dev</h1>
        </a>
    </div>
</header>



<style>
    header {
        @apply bg-brand-bg relative;
    }

    .navbar{
        @apply absolute flex;
        inset: 0 0 auto 0;
        
    } 

    .navbar-item{
        @apply flex px-5 items-center gap-3 h-16;
    }   

    .hero{
        @apply h-64 md:h-96 flex items-center justify-center;
    }

    .logo {
        @apply flex flex-col justify-center items-center gap-3;
        filter: drop-shadow(0 2px 2px rgba(0, 0, 0, .1)) drop-shadow(0 3px 1px rgba(0, 0, 0, .075)) drop-shadow(0 1px 5px rgba(0, 0, 0, .1)) drop-shadow(0 -1px 2px rgba(0, 0, 0, .075));
    }
</style>