---
import Bento from "@/components/sections/Bento.astro";
import Layout from "../layouts/Layout.astro";
import Experience from "@/components/sections/Experience.astro";
import Projects from "@/components/sections/Projects.astro";
import GradientHero from "@/components/ui/GradientHero.astro";
import MiniHeader from "@/components/ui/MiniHeader.astro";
import Particles from "@/components/ui/Particles.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
---

<Layout
  title="quesocaliente.dev"
  description="Sitio web persona sobre tecnologia y desarrollo de software"
>
  <main>
    <GradientHero />
    <Particles />
    <MiniHeader />
    <div class="flex flex-col gap-[120px]">
      <Bento />
      <Projects />
      <Experience />
      <CallToAction />
    </div>
  </main>
</Layout>

<style>
  .main {
    display: grid;
    grid-template-columns: 1fr;
    @apply py-8;
    grid-gap: 2rem;
    padding: 2rem;
  }
</style>
