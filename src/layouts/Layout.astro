---
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import HeaderMini from '@/components/HeaderMini.astro';
import Seo from '@/components/Seo.astro';
import Sidebar from '@/components/ui/Sidebar/Sidebar.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
	description: string;
	image?: string;
	canonical?: string;
	showHero?: boolean;

}

const { title, description, image, canonical, showHero } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<Seo
			title={title}
			description={description}
			image={image}
			canonical={canonical}

		/>
		<ViewTransitions />
	</head>
	<body class="overflow-x-hidden">
		<Sidebar/>
		<div id="content" class="w-full transition-transform duration-500">
			{showHero ? <Header transition:persist/> : <HeaderMini transition:persist/>}
			<slot />
			<Footer/>
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable', sans-serif;
		background: #f2f2f2;
	}
</style>


<script>
	document.addEventListener('astro:page-load', async () => {
	  const content = document.querySelector("#content") as HTMLDivElement;
	const sidebar = document.querySelector("#sidebar") as HTMLDivElement;
	const backdrop = document.querySelector("#sidebar-backdrop") as HTMLDivElement;
  
	const toggleSidebar = () => {
	  sidebar.classList.toggle("-translate-x-[100%]");
	  backdrop.classList.toggle("hidden");
	  content.classList.toggle("translate-x-64");
	};
	const menu = document.querySelector("#menu") as HTMLDivElement;
	menu.addEventListener("click", toggleSidebar);

	});
  </script>
